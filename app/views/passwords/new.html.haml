- this_title_is "Forgot Password"

.row.yh-container
  .col-12.col-sm-7.mr-sm-auto.ml-sm-auto

    = render "layouts/alert"

    .jumbotron
      %h1.yh-page-title Forgot Your Password?

      = form_for(:user, method: :post, url: forgot_password_path) do |f|
        .form-group
          = f.label :email, 'E-mail'
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class: "form-control"

        .row.no-gutters
          = link_to "Cancel", new_login_path, class: "col-sm-3 btn btn-danger"
          = f.submit "Send", class: "col-sm-3 btn btn-primary"

