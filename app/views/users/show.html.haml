- this_title_is "User Information"

.row.yh-container
  .col-12.col-sm-8.mr-sm-auto.ml-sm-auto
    = render "layouts/alert"

    .jumbotron
      %h1.yh-page-title Your Information

      .form-group.row.no-gutters.yh-form-group
        .col-sm-2.col-form-label= "E-mail"
        .col-sm-10.form-control-plaintext= current_user.email

      .form-group.row.no-gutters.yh-form-group
        .col-sm-2.col-form-label= "Name"
        .col-sm-10.form-control-plaintext= current_user.name

      = link_to "Edit", edit_user_path, class: "btn btn-primary"

